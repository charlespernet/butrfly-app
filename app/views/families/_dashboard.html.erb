<div class="fullpage">

  <div class="left-column mq-hidden-under-680">

    <div class="identity-dashboard">

      <div>
        <div class="dsb-name-title"><%= @user.family_name %></div>
        <div class="dsb-email"><%= @user.email %> </div>
      </div>

    </div>


    <div class="item-dashboard">
      <i class="fa fa-calendar dsb-left-icon" aria-hidden="true"></i>
      <div>Cherche à partir du <div class="family-name4"><%= @user.starting_date %></div></div>
    </div>

    <div class="item-dashboard">
      <i class="fa fa-home dsb-left-icon" aria-hidden="true"></i>
      <div>Type de famille<div class="family-name4"><%= t(@user.family_type) %></div></div>
    </div>

    <div class="item-dashboard">
      <i class="fa fa-list dsb-left-icon" aria-hidden="true"></i>
      <div>Nombre d'enfants<div class="family-name4"><%= @user.children_number_display %></div></div>
    </div>

    <div class="item-dashboard">
      <i class="fa fa-line-chart dsb-left-icon" aria-hidden="true"></i>
      <div>Ages des enfants<div class="family-name4"><%= @user.children_ages %></div></div>
    </div>

    <div class="item-dashboard">
      <i class="fa fa-car dsb-left-icon" aria-hidden="true"></i>
      <div>Permis de conduire requis<div class="family-name4"><%= @user.driving_license_required ? "oui" : "non" %></div></div>
    </div>

    <div class="item-dashboard">
      <i class="fa fa-plug dsb-left-icon" aria-hidden="true"></i>
      <div>Tâches ménagères<div class="family-name4"><%= @user.housework ? "oui" : "non" %></div></div>
    </div>


  </div>



  <div class="right-column">

    <div class="dashboard-top-container">

      <div class="banner2">
        <div class="banner-content mq-show-under-680">
          <h1><%= @user.family_name %></h1>
          <h4><%= @user.email %></h4>
        </div>
      </div>

    </div>


    <div class="your-search" >

      <div class="your-search-item">
        <i class="fa fa-calendar your-search-left-icon" aria-hidden="true"></i>
        <div>Duréé du contrat<div class="family-name4"><%= t(@user.prefered_duration) %></div></div>
      </div>

      <div class="your-search-item">
        <i class="fa fa-male your-search-left-icon" aria-hidden="true"></i>
        <div>Genre préferé<div class="family-name4"><%= t(@user.prefered_gender) %></div></div>
      </div>

      <div class="your-search-item">
        <i class="fa fa-globe your-search-left-icon" aria-hidden="true"></i>
        <div>Nationalité<div class="family-name4"><%= t(@user.country_name) %></div></div>
      </div>

    </div>


    <div class="ys-aupair-description">

      <div class="ds-title-link">
        <div class="ys-aupair-dsc-text">Description | </div>
        <i class="fa fa-pencil your-search-left-icon2" aria-hidden="true"></i>
      </div>

      <div class="dsc-text">
        <%= @user.try(:description) %>
      </div>

    </div>


    <div class="dsb-buttons-group" >

      <%= link_to "Modifier", edit_family_path(@user), class: "dsb-profil-btn" %>

    </div>


  </div>

</div>
