<div class="fullpage">

  <div class="filter-block">

    <div class="identity-dashboard">

      <div>
        <div class="dsb-name-title">Famille <%= @user.name %></div>
        <div class="dsb-email"><%= @user.email %> </div>
      </div>

    </div>


    <div class="item-dashboard">
      <i class="fa fa-genderless dsb-left-icon" aria-hidden="true"></i>
      <div>Cherche à partir du <div class="family-name4"><%= @user.starting_date %></div></div>
    </div>

    <div class="item-dashboard">
      <i class="fa fa-genderless dsb-left-icon" aria-hidden="true"></i>
      <div>Type de famille<div class="family-name4"><%= @user.family_type %></div></div>
    </div>

    <div class="item-dashboard">
      <i class="fa fa-genderless dsb-left-icon" aria-hidden="true"></i>
      <div>Nombre d'enfants<div class="family-name4"><%= @user.children_number %></div></div>
    </div>

    <div class="item-dashboard">
      <i class="fa fa-genderless dsb-left-icon" aria-hidden="true"></i>
      <div>Ages des enfants<div class="family-name4">De <%= @user.children_age_from %> à <%= @user.children_age_to %> ans</div></div>
    </div>

    <div class="item-dashboard">
      <i class="fa fa-genderless dsb-left-icon" aria-hidden="true"></i>
      <div>Permis de conduire requis<div class="family-name4"><%= @user.driving_license_required ? "oui" : "non" %></div></div>
    </div>

    <div class="item-dashboard">
      <i class="fa fa-genderless dsb-left-icon" aria-hidden="true"></i>
      <div>Tâches ménagères<div class="family-name4"><%= @user.housework ? "oui" : "non" %></div></div>
    </div>


  </div>



  <div class="content-block">

    <div class="banner2">
      <div class="banner-content">
        <h1>Famille <%= @user.name %></h1>
        <h4><%= @user.email %></h4>
      </div>
    </div>


    <div class="your-search" >

      <div class="your-search-item">
        <i class="fa fa-genderless your-search-left-icon" aria-hidden="true"></i>
        <div>Duréé du contrat<div class="family-name4"><%= @user.prefered_duration %></div></div>
      </div>

      <div class="your-search-item">
        <i class="fa fa-genderless your-search-left-icon" aria-hidden="true"></i>
        <div>Genre préferé<div class="family-name4"><%= @user.prefered_gender %></div></div>
      </div>

      <div class="your-search-item">
        <i class="fa fa-genderless your-search-left-icon" aria-hidden="true"></i>
        <div>Nationalité<div class="family-name4"><%= @user.country_code %></div></div>
      </div>

    </div>


    <div class="ys-aupair-description">

      <div class="ds-title-link">
        <div class="ys-aupair-dsc-text">Description | </div>
        <i class="fa fa-pencil your-search-left-icon2" aria-hidden="true"></i>
      </div>

      <div class="dsc-text">
        <%= @user.try(:description) %>
      </div>

    </div>


    <div class="dsb-buttons-group" >


      <%= link_to "Modifier", edit_family_path(@user), class: "dsb-profil-btn" %>


    </div>







    <div class="navbox">

      <!-- Nav tabs -->
      <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Infos</a></li>
        <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Profil</a></li>
        <li role="presentation"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab">Messages</a></li>
        <li role="presentation"><a href="#settings" aria-controls="settings" role="tab" data-toggle="tab">Réglages</a></li>
      </ul>

    </div>

    <div class="tab-content">

    <div role="tabpanel" class="tab-pane active" id="home">
      <div class="text-center navpill-one">








        <h4 class="navpill-title">Infos</h4>

        <div class="text-center">
          <%= link_to "Modifier", edit_aupair_path(@user), class: "btn-generic" %>
        </div>



      </div>
    </div>

    <div role="tabpanel" class="tab-pane" id="profile">
      <div class="text-center navpill-one">
        <i class="fa fa-eye" aria-hidden="true"></i>
        <h4 class="navpill-title">Profil</h4>
      </div>
    </div>

    <div role="tabpanel" class="tab-pane" id="messages">
      <div class="text-center navpill-one">
        <i class="fa fa-comments" aria-hidden="true"></i>
        <h4 class="navpill-title">Messages</h4>
      </div>
    </div>

    <div role="tabpanel" class="tab-pane" id="settings">
      <div class="text-center navpill-one">
        <i class="fa fa-cog fa-spin" aria-hidden="true"></i>
        <h4 class="navpill-title">Réglages</h4>
      </div>
    </div>

  </div>

  </div>

</div>
