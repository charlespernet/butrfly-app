
<div class="butrfly-wrapper div-center">
  <div class="butrfly-container div-center">
    <div class="hidden-xs hidden-ms">
      <%= render "shared/square_box", title: @user.name, color: :yellow %>
      <% if current_user && @user == current_user.specific %>
        <div class="frame-default frame-btn">
          <div class="input-button div-center items-center">
            <%= link_to "MODIFIER", edit_family_path(@user) %>
          </div>
        </div>
      <% end %>
      <%= render "filters_show" %>

    </div>
    <div class="index-container">

      <div class="banner-folio">
        <div class="banner-folio-photo portrait" style="background-image: url('https://kitt.lewagon.com/placeholder/cities/berlin');">
        </div>
        <div class="banner-folio-photo landscape" style="background-image: url('https://kitt.lewagon.com/placeholder/cities/paris');">
        </div>
        <div class="banner-folio-photo portrait" style="background-image: url('https://kitt.lewagon.com/placeholder/cities/bordeaux');">
        </div>
      </div>

      <div class="div-spacebetween">
        <div class="btn-yellow-default flex-auto div-center">
          <i class="fa fa-calendar" aria-hidden="true"></i>
          <label>
            <h2>DISPONIBLE À PARTIR DE</h2>
            <p>Juillet 2017</p>
          </label>
        </div>
        <div class="btn-yellow-default flex-auto div-center">
          <i class="fa fa-history" aria-hidden="true"></i>
          <label>
            <h2>POUR QUELLE DURÉE</h2>
            <p>3 mois</p>
          </label>
        </div>
        <div class="btn-yellow-default flex-auto div-center">
          <i class="fa fa-globe" aria-hidden="true"></i>
          <label>
            <h2>PAYS RECHERCHÉS</h2>
            <p>Français, Espagne</p>
          </label>
        </div>
      </div>
      <div class="border-default border-yellow width-100 padding-20px">
        <div class="container-fluid">
          <h2>DESCRIPTION</h2>
          <p><%= @user.description %></p>
        </div>
      </div>
    </div>
  </div>
</div>




