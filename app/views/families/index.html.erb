<div class="container">
  <h2>Cherche</h2>
  <div id="form-ui">
    <p>
      <label><input type="checkbox" value=".male" /> Un Aupair masculin</label>
      <label><input type="checkbox" value=".female" /> Un Aupair f√©minin</label>
    </p>
  </div>
  <%= simple_form_for :search, method: :get, html: { class: "form-inline" }, defaults: { label: false } do |f| %>
    <%= f.input :date, as: :date, selected: @date, start_year: Date.today.year, end_year: Date.today.year + 2 %>
    <%= country_select("search", "country", only: ["FR", "ES", "IT", "UK", "DE", "BE", "SW", "IR", "LU"], selected: @country_code) %>
    <%= f.submit "Rechercher", class: "btn-banner-home2" %>
    <%= link_to "Effacer", families_path, class: "btn-banner-home2" %>
  <% end %>

  <div class="grid">
    <%= render @families %>
  </div>
</div>
