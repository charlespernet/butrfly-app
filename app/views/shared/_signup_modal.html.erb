<div class="modal fade signup-sm" id="signup" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">



        <h3 class="text-center title-modal">Créer un compte</h3>
        <%= simple_form_for(:user, url: user_registration_path) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :type, as: :radio_buttons, collection: User::TYPES, checked: User::TYPES.first, label: false %>
            <%= f.input :email, required: true, autofocus: true %>
            <%= f.input :password, required: true, hint: ("6 characters minimum") %>
          </div>

          <div class="form-actions text-center">
            <%= f.button :submit, "Créer un compte", class: "btn-primary btn btn-md" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>


    </div>
  </div>
</div>
