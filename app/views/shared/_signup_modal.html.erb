<div class="modal fade signup-sm" id="signup" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">

      <div class="text-center">

        <h2 class="text-center">Sign up</h2>
        <%= simple_form_for(:user, url: user_registration_path) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :type, as: :radio_buttons, collection: User::TYPES, checked: User::TYPES.first %>
            <%= f.input :email, required: true, autofocus: true %>
            <%= f.input :password, required: true, hint: ("6 characters minimum") %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up", class: "btn-primary btn btn-md" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</div>
