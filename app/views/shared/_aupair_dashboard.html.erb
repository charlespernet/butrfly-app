<div class="banner2">
  <div class="banner-content">
    <h1><%= @user.first_name %> <%= @user.last_name %></h1>
    <h4><%= @user.email %></h4>
  </div>
</div>

<div class="navbox">

<!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Infos</a></li>
    <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Profil</a></li>
    <li role="presentation"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab">Messages</a></li>
    <li role="presentation"><a href="#settings" aria-controls="settings" role="tab" data-toggle="tab">Réglages</a></li>
  </ul>

  <!-- Tab panes -->

</div>

<div class="tab-content">

    <div role="tabpanel" class="tab-pane active" id="home">
      <div class="container text-center navpill-one">
        <i class="fa fa-database" aria-hidden="true"></i>
        <h4 class="navpill-title">Infos</h4>
          <div class="cardinfos">
            <div class="navbar-wagon-link-grey">Email : <%= @user.email %></div>
          </div>
          <div class="cardinfos">
            <div class="navbar-wagon-link-grey">Nom : <%= @user.last_name %></div>
          </div>
          <div class="cardinfos">
            <div class="navbar-wagon-link-grey">Pays : <%= @user.country_code %></div>
          </div>
        <% if @user.smoker %>
          <div class="cardcondition">
            <h3 class="fa fa-skyatlas" aria-hidden="true"></h3>
            <p>fumeur</p>
          </div>
        <% end %>
      </div>
    </div>

    <div role="tabpanel" class="tab-pane" id="profile">
      <div class="container text-center navpill-one">
        <i class="fa fa-eye" aria-hidden="true"></i>
        <h4 class="navpill-title">Profil</h4>
      </div>
    </div>

    <div role="tabpanel" class="tab-pane" id="messages">
      <div class="container text-center navpill-one">
        <i class="fa fa-comments" aria-hidden="true"></i>
        <h4 class="navpill-title">Messages</h4>
      </div>
    </div>

    <div role="tabpanel" class="tab-pane" id="settings">
      <div class="container text-center navpill-one">
        <i class="fa fa-cog fa-spin" aria-hidden="true"></i>
        <h4 class="navpill-title">Réglages</h4>
      </div>
    </div>

  </div>


<div class="container text-center">
  <%= link_to "Modifier", edit_aupair_path(@user), class: "btn btn-primary" %>
</div>
