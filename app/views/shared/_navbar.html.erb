<div class="navbar-main">

  <%= link_to root_path do %>
    <div class="navbar-left">
      <%= image_tag("papillon-noir.png", class: "navbar-logo") %>
      <h2 class="navbar-title"><%=  t('meta-title') %></h2>
    </div>
  <% end %>

  <div class="navbar-right hidden-xs">
    <%= link_to "COMMENT ÇA MARCHE ?", procedure_path, class: "navbar-link" %>
    <%= link_to "BLOG", t('meta-url-blog'), target: "_blank", class: "navbar-link" %>
    <%= link_to "ABONNEMENTS FAMILLE", families_plans_path, class: "navbar-link" %>
    <%= link_to "ABONNEMENTS AU PAIR", aupairs_plans_path,  class: "navbar-link" %>
    <% if user_signed_in? %>
      <%= link_to t("shared.account"), family_path(current_user.specific), class: "navbar-link" if current_user.specific.is_a?(Family)  %>
      <%= link_to t("shared.account"), aupair_path(current_user.specific), class: "navbar-link" if current_user.specific.is_a?(Aupair)  %>
      <%= link_to t("shared.sign_out"), destroy_user_session_path, class: "navbar-link", method: :delete %>
    <% else %>
      <%= link_to t("shared.sign_up"), '#signup', class: 'navbar-link', 'data-toggle' => 'modal' %>
      <%= link_to t("shared.sign_in"), '#login', class: 'navbar-link', 'data-toggle' => 'modal' %>
    <% end %>
  </div>

  <div class="navbar-dropdown hidden-sm hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-dropdown-menu">
        <%= link_to "COMMENT ÇA MARCHE ?", procedure_path, class: "navbar-link" %>
        <%= link_to "BLOG", t('meta-url-blog'), target: "_blank", class: "navbar-link" %>
        <%= link_to "ABONNEMENTS FAMILLE", families_plans_path, class: "navbar-link" %>
        <%= link_to "ABONNEMENTS AU PAIR", aupairs_plans_path,  class: "navbar-link" %>
        <% if user_signed_in? %>
          <%= link_to t("shared.account"), family_path(current_user.specific), class: "navbar-link" if current_user.specific.is_a?(Family)  %>
          <%= link_to t("shared.account"), aupair_path(current_user.specific), class: "navbar-link" if current_user.specific.is_a?(Aupair)  %>
          <%= link_to t("shared.sign_out"), destroy_user_session_path, class: "navbar-link", method: :delete %>
        <% else %>
          <%= link_to t("shared.sign_up"), '#signup', class: "navbar-link", 'data-toggle' => 'modal' %>
          <%= link_to t("shared.sign_in"), '#login', class: "navbar-link", 'data-toggle' => 'modal' %>

        <% end %>
      </ul>
    </div>
  </div>
</div>

<% unless user_signed_in? %>
  <%= render 'shared/signup_modal', checked: "Aupair" %>
  <%= render 'shared/signup_modal', checked: "Family" %>
  <%= render 'shared/signin_modal' %>
<% end %>


<% if @show_modal %>

  <!-- Modal -->
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header text-right">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
        <div class="modal-body">
          <% if current_user.specific.profile_completion == 100 %>
            Profil finalisé
          <% else %>
            Profil en cours de finalisation
          <% end %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
          <button type="button" class="btn btn-primary">Retourner au profile</button>
        </div>
      </div>
    </div>
  </div>

  <% content_for :after_js do %>
    <script>
      $('#myModal').modal('show');
      // $('#myModal').on('hidden.bs.modal', fonction () {
      //   $('#myModal').remove();
      // });
    </script>
  <% end %>

<% end %>
