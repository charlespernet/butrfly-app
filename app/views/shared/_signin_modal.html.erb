<div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-border">
        <div class="modal-close text-center">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>

        <%= link_to root_path do %>
          <%= image_tag("papillon-gris.png", class: "modal-logo") %>
        <% end %>

        <div class="modal-form">
          <%= simple_form_for(:user, url: new_user_session_path, html: {class: 'modal-form-inputs'}) do |f| %>
            <%= f.input :email, required: false, autofocus: true, placeholder: 'adresse e-mail', label: false,
            input_html: {class: 'modal-input-italic'} %>
            <div class="modal-password-group">
              <%= f.input :password, required: false, placeholder: "Password", label: false %>
              <%= f.input :remember_me, label: t('shared.remember_me'), as: :boolean %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, t('shared.sign_in'), class: 'modal-btn-submit' %>
            </div>
          <% end %>

          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Mot de passe oubliÃ© ?", new_password_path(resource_name), class: "modal-link-italic" %><br />
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
