<div class="modal fade login-sm" id="login" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">


        <h3 class="text-center title-modal">Se connecter</h3>

      <%= simple_form_for(:user, url: new_user_session_path) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, as: :boolean %>
        </div>

        <div class="form-actions text-center">
          <%= f.button :submit, "Se connecter", class: "btn-primary btn btn-md" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
