<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="<%= yield_with_default(:description, t('meta-description')) %>">
    <title><%= yield_with_default(:title, t('meta-title')) %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= favicon_link_tag %>
  </head>
  <body class="site">
    <%= render 'shared/navbar' %>
    <%= render 'shared/flashes' %>
    <div class="site-content">
      <%= yield %>
    </div>
    <%= render 'shared/footer' %>
    <%= render 'shared/contact' %>
    <!-- login and sign_up modals -->
    <%#= render 'shared/congrats_modal' if @just_signed_up %>

    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.13.0/moment.min.js" %>
    <%= javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.37/js/bootstrap-datetimepicker.min.js" %>
    <%= yield(:after_js) %>
    <%= cloudinary_js_config %>

    <script type="text/javascript">
      $(function () {
        $('#datetimepicker-standar').datetimepicker({format: "DD/MM/YYYY"});
      });
      $(function () {
        $('#datetimepicker-year').datetimepicker({
          format: "DD/MM/YYYY",
          viewMode: 'years'
        });
      });
    </script>


  </body>
</html>
