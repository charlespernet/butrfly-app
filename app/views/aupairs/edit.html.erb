<div class="container loginview">
  <%= simple_form_for @user do |f| %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :birth_date, start_year: Date.today.year - 90, end_year: Date.today.year - 12, selected: Date.today.year - 25 %>
    <%= f.input :country_code, priority: ["FR", "GB", "ES"], label: false, prompt: "Select your country" %>
    <%= f.input :description %>
    <%= f.input :driving_license %>
    <%= f.input :smoker %>
    <%= f.input :musician %>
    <div class="form-actions text-center">
      <%= f.button :submit, "Mettre Ã  jour", class: "btn-primary btn btn-md" %>
    </div>
  <% end %>
</div>
