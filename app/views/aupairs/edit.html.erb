
<%= simple_form_for @user do |f| %>

<div class="edit-flex-container">

  <div class="left-edit-block">
    <div class="left-title">Mon profil</div>
    <div class="left-percent"><%= @user.profile_completion %> %</div>
    <%= f.button :submit, "Mettre à jour", class: "left-update-btn" %>
  </div>

  <div class="right-edit-block">


      <div class="navbox-2">

      <!-- Nav tabs -->
      <ul class="nav nav-tabs-2" role="tablist" id="myTab">
        <li role="presentation" class="active"><a href="#step1" aria-controls="step1" role="tab" data-toggle="tab">#1</a></li>
        <li role="presentation"><a href="#step2" aria-controls="step2" role="tab" data-toggle="tab">#2</a></li>
        <li role="presentation"><a href="#step3" aria-controls="step3" role="tab" data-toggle="tab">#3</a></li>
        <li role="presentation"><a href="#step4" aria-controls="step4" role="tab" data-toggle="tab">#4</a></li>
      </ul>

    </div>



    <div class="tab-content">
      <!-- Step 1 start -->
      <div role="tabpanel" class="tab-pane active" id="step1">
        <div class="navpill-two">

          <div class="right-block-title">
            <div class="title-text-bold">#1</div>
            <div class="title-text">Quelques questions pour commencer</div>
          </div>

          <div class="flex-form-right">

            <div class="form-right-block">

              <div class="test-flex">
                <%= f.input :first_name, label:"Ton petit nom" %>
                <%= f.input :last_name, label:"Ton nom de famille" %>
              </div>
                <%= f.input :email, label:"Ton email" %>
                <%= f.input :birth_date, start_year: Date.today.year - 90, end_year: Date.today.year - 12, label:"Ta date de naissance" %>
              <div class="test-flex">
                <%= f.input :country_code, priority: ["FR", "GB", "ES"], label:"Ta nationalité" %>
                <%= f.input :gender, collection: Aupair.genders.keys, default: 0, label:"Ton sexe" %>
              </div>

             </div>


            </div>


          </div>
      </div>
      <!-- Step 1 end -->



      <!-- Step 2 start -->
      <div role="tabpanel" class="tab-pane" id="step2">
        <div class="navpill-two">

          <div class="right-block-title">
            <div class="title-text-bold">#2</div>
            <div class="title-text">Tes disponibiltés</div>
          </div>


          <div class="flex-form-right">

            <div class="form-right-block">
              <%= f.input :dispo_from, start_year: Date.today.year, end_year: Date.today.year + 4, label:"Disponible à partir du" %> <!-- que le mois et l'année -->
              <%= f.input :stay_duration, collection: Aupair.stay_durations.keys, default: 0, label:"Pour une durée de" %> <!-- 3 choix -->
            </div>

          </div>

        </div>
      </div>
      <!-- Step 2 end -->



      <!-- Step 3 start -->
      <div role="tabpanel" class="tab-pane" id="step3">
        <div class="navpill-three">

          <div class="right-block-title">
            <div class="title-text-bold">#3</div>
            <div class="title-text">Tes super pouvoirs</div>
          </div>


          <div class="flex-form-right">

            <div class="form-right-block">
              <%= f.input :description, label:"Décrivez-vous en quelques lignes" %>
              <div class="test-flex">
                <%= f.association :languages, as: :check_boxes, label:"Quelles langues parles-tu ?" %>
              </div>
              <div class="test-flex">
                <%= f.association :countries, as: :check_boxes %>
              </div>
            </div>

          </div>

        </div>
      </div>
      <!-- Step 3 end -->



      <!-- Step 4 start -->
      <div role="tabpanel" class="tab-pane" id="step4">
        <div class="navpill-four">

          <div class="right-block-title">
            <div class="title-text-bold">#4</div>
            <div class="title-text">Infos diverses</div>
          </div>


          <div class="flex-form-right">

            <div class="form-right-block">
              <%= f.input :driving_license, label:"As tu le permis de conduire ?" %>
              <%= f.input :accepted_domestic_animal, label:"Accepte tu les animaux domestiques ?" %>
              <%= f.input :educational_experience, label:"As-tu l'habitude de garder des enfants ?"  %>
              <%= f.input :experience_aupair, label:"As-tu deja eu une experience au pair ?" %>
              <%= f.input :sports, label:"Pratique tu un sport ?" %>
              <%= f.input :musician, label:"Joues-tu d'un instrument ?" %>

              <!-- Pas de checkbox mais plutot un oui / non -->

            </div>

          </div>

        </div>
      </div>
      <!-- Step 4 end -->




    </div>


  </div>


</div>

<% end %>

