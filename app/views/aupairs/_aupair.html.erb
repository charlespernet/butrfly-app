
<div class="mansory-container item <%= aupair.languages.pluck(:code).join(" ") %>">

  <div class="mansory-picture" style="background-image: url(<%= cl_image_path aupair.photos.first.path if aupair.photos.present? %>);"></div>

  <div class="mansory-text">
    <div class="m-real-text">
      <%= aupair.first_name %> <%= aupair.last_name %>
    </div>
    <div class="m-real-text">
      <%= aupair.age %> ans
    </div>
    <br>
    <div class="m-real-text">
      <%= aupair.country_name %>
    </div>
    <div>
      <%= link_to "Voir", aupair, class: "mansory-button" %>
    </div>
  </div>

</div>
